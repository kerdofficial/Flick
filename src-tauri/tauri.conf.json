{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flick",
  "version": "0.5.4",
  "identifier": "com.kerdofficial.flick",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "flick",
        "width": 1536,
        "height": 768,
        "decorations": false,
        "resizable": true,
        "minWidth": 1280,
        "minHeight": 768,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/kerdofficial/flick/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFEREE3RkJCNkExNUM0N0UKUldSK3hCVnF1My9hclFGcCtlS3AwRmxZN2VSalpUWVA1dmVwSS9saS94M05LY3BJZmI1MkxRc20K",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}